@model WebAPI.Models.Film

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section boxTitle {
    <div class="col-md-12">
        @Html.ActionLink("Trở về", "Index")
    </div>
}
<h2>Thêm phim</h2>

<form name="formAddFilm" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="container">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="">Ảnh hiển thị</label>
                    <input type="file" name="images" value="" accept="image/*">
                    <div class="view-images">
                        <img src="/Content/images/smallfoot_vietnamese_poster240.jpg" id="image-film" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="">Trailer (Mã nhúng)</label>
                    <button class="btn-default" onclick="ViewTrailer()" type="button">Xem</button>
                    <textarea name="trailer" rows="2" class="form-control"></textarea>
                    <div class="view-trailer">
                    </div>

                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="">Tên phim</label>
                    <input type="text" class="form-control" name="FilmName" id="" placeholder="Tên phim">
                </div>

                <div class="form-group">
                    <label for="">Đạo diễn</label>
                    <input type="text" class="form-control" name="Author" id="" placeholder="Đạo diễn">
                </div>

                <div class="form-group">
                    <label for="">Nhà sản xuất</label>
                    <input type="text" class="form-control" name="Producer" id="" placeholder="Nhà sản xuất">
                </div>

                <div class="form-group">
                    <label for="">Quốc gia</label>
                    <input type="text" class="form-control" name="Nation" id="" />
                </div>

                <div class="form-group">
                    <label for="">Ngày khởi chiếu</label>
                    <input type="date" class="form-control" name="ReleaseDate" id="" />
                </div>
                <div class="form-group">
                    <label for="">Diễn viên</label>
                    <input type="text" class="form-control" name="Actor" id="" />
                </div>
                <div class="form-group">
                    <label for="">Đánh giá</label>
                    <input type="text" class="form-control" name="Rated" id="" placeholder="5.0" />
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group">
                    <label for="">Chi tiết</label>
                    <textarea name="Description" rows="5" class="form-control"></textarea>
                </div>
                <div class="form-group check-box-genre-film">

                </div>

                <script type="text/javascript">
                    $(document).ready(function () {
                        UploadChange();
                        CheckBoxGenreFilm();
                    })
                </script>

                <div class="form-group">
                    <button type="button" class="btn btn-primary" onclick="BtnAddFilm_Click()">Thêm mới</button>
                </div>
            </div>
        </div>
    </div>
</form>

